# Different escape character
escape ``

# Don't show startup message
startup_message off

# Put hardcopies in home directory
hardcopydir $HOME

# Nice status bar at the bottom with list of tabs
caption always " %H  %-Lw%{= kw}%50> %n%f* %t %{-}%+Lw%< "

# Bigger scrollback buffer
defscrollback 10000

# Time after which screen is considered silent
silencewait 10

# Interactive applications don't clutter the buffer
altscreen on

# Ignore case in searches
ignorecase on

# Disable software flow control
defflow off

# Assume terminal that supports 256 colors
term "screen-256color"

# New key bindings
bind = next
bind - prev
bind w windowlist -b
bind o focus
bind m monitor
bind s silence
bind x remove
