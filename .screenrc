escape ``
startup_message off
#hardstatus string '%h'
backtick 1 5 1 awk '// { print $7; }' /proc/apm
#caption always " %c %1`  %-Lw%{= kw}%50> %n%f* %t %{-}%+Lw%< "
caption always " %H  %-Lw%{= kw}%50> %n%f* %t %{-}%+Lw%< "
#caption always "%3n %t%? (%u)%?%?: %h%?"
windowlist title ""
windowlist string "%3n%f %t%? (%h)%?"
defscrollback 4096
defutf8 on

bind '=' next
bind '-' prev
bind 'l' screen -t logs 9 sudo /home/alpha/bin/taillog
bind 'm' screen 8 mutt
