# Custom escape character
escape ``

# Don't show startup message
startup_message off

# Put hardcopies in home directory
hardcopydir $HOME

# Use at least one backtick for status bar auto-refresh
backtick 1 1 1 /bin/sh -c 'cat /proc/loadavg | cut -d" " -f1'

# Status bar with all windows shown as tabs
caption always " %{B}%H%{k}  %-Lw%{= bW}%50> %n%f %t %{-}%+Lw%<  %=%{B}%1`%{k} "

# Hardstatus for xterm title
defhstatus "screen ^En: ^Et"

# Display messages in caption not in hardstatus
hardstatus off

# Bigger scrollback buffer
defscrollback 10000

# Time after which screen is considered silent
silencewait 10

# Interactive applications don't clutter the buffer
altscreen on

# Ignore case in searches
ignorecase on

# Disable software flow control
defflow off

# Assume terminal that supports 256 colors
term "screen-256color"

# Time to keep messages visible
msgwait 1

# New key bindings
bind = next
bind - prev
bind w windowlist -b
bind o focus
bind m monitor
bind s silence
bind x remove
